{
  "name": "tomamine",
  "author": "Ktonel475",
  "main": "main.js",
  "description": "A tomato timer built with Vitejs + Electron",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@capacitor/android": "^7.0.1",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.1",
    "@capacitor/ios": "^7.0.1",
    "@chakra-ui/react": "^3.3.1",
    "@electron-forge/plugin-vite": "^7.6.0",
    "@emotion/react": "^11.14.0",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^11.18.1",
    "next-themes": "^0.4.4",
    "react": "^18.3.1",
    "react-countdown-circle-timer": "^3.2.1",
    "react-dom": "^18.3.1",
    "react-howler": "^5.2.0",
    "react-icons": "^5.4.0",
    "react-timer-hook": "^3.0.8",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "electron-builder": "^25.1.8",
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-howler": "^5.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.0.0",
    "electron-packager": "^17.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.Ktonel475.tomamine",
    "productName": "Tomamine",
    "copyright": "Copyright Â© 2024 Ktonel475",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/app-icon.icns"
    },
    "win": {
      "icon": "public/winIcon.ico",
      "target": "nsis"
    }
  }
}